    <TargetFramework>net8.0</TargetFramework>
    <AspNetCoreHostingModel>InProcess</AspNetCoreHostingModel> <!-- Configure for in-process hosting with Kestrel -->
    <Nullable>enable</Nullable> <!-- Enable nullable reference types for better safety -->
    <EnablePreviewFeatures>true</EnablePreviewFeatures>
  </PropertyGroup>

  <ItemGroup>
    <!-- Adding the necessary package for Kestrel -->
    <PackageReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

